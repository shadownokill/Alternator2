<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shadow.alternator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:name="com.shadow.alternator.AlternatorApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.shadow.alternator.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shadow.alternator.activity.MyAccountInfoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.shadow.alternator.activity.LoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.shadow.alternator.activity.AlternatorListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.shadow.alternator.activity.AlternatorDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.shadow.alternator.activity.AlternatorRealtimeActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>