                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_os"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_circle_off" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
