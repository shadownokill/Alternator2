                        android:orientation="horizontal"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="输出口4"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
