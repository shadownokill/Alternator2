                            android:id="@+id/text_o0"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_circle_off" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
