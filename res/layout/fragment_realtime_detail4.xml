                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="输出口1"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
