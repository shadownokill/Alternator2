<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_white_light2deep"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_al" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/img_icon"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="XHWY-10"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="171.221.104.58"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_icon"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_a1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_white_light2deep"
            android:scaleType="center"
            android:src="@drawable/icon_a1" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="#f3f3f3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_a2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_white_light2deep"
            android:scaleType="center"
            android:src="@drawable/icon_a2"
            android:visibility="gone" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="#f3f3f3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_a3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_white_light2deep"
            android:scaleType="center"
            android:src="@drawable/icon_a3"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/llayout_action"
        android:background="#F3F3F3" />

</RelativeLayout>